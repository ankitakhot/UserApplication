@model UserManagement.Web.Models.Users.LogsViewModel
@if (Model != null)
{
    <h3>logs</h3>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Type</th>
                    <th>Message</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            @item.UserId
                        </td>
                        <td>
                            @item.Type
                        </td>
                        <td>
                            @item.ShowMessage
                        </td>
                        <td>
                            @item.Details
                        </td>
                        <td>
                            @using (Html.BeginForm("Details", "Log",item, FormMethod.Post))
                                    {
                                <input type="submit" value="View" class="btn btn-primary" />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else{
    <p>No logs exist</p>
}
